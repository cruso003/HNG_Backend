datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId        String         @id @default(uuid())
  firstName     String
  lastName      String
  email         String         @unique
  password      String
  phone         String?
  organizations Organization[] // Relation to organizations
}

model Organization {
  orgId       String  @id @default(uuid())
  name        String
  description String?
  users       User[] // Relation to users
}
